<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_intro"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cdrussell.survivingpresenters.IntroActivity">


    <TextView
        android:id="@+id/presenter_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="Count will appear here"/>

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="incrementButtonPressed"
        android:padding="20dp"
        android:text="@string/increment"/>


    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="decrementButtonPressed"
        android:padding="20dp"
        android:text="@string/decrement"/>

</LinearLayout>
